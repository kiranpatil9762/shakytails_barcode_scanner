# ShakyTails - Production Environment Variables
# Copy this file to .env and fill in your production values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database - Use your production MongoDB Atlas cluster
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/shakytails?retryWrites=true&w=majority

# JWT Secrets - CHANGE THESE TO STRONG RANDOM STRINGS
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_min_32_characters
JWT_EXPIRE=7d
JWT_RESET_EXPIRE=10m

# Email Configuration (Gmail or other SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=ShakyTails <your-email@gmail.com>

# WhatsApp API (Optional)
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_API_URL=https://api.whatsapp.com/send

# Base URL - Your production domain
BASE_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Admin Credentials - CHANGE THESE
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# Security (Optional - recommended for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
